doctype html
html(lang="en")

  head
    title srm
    script(src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
    script(src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")
    // Meta
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="description", content="CodedThemes")
    meta(name="keywords", content="Admin, Responsive, Landing, Bootstrap, App, Template, Mobile, iOS, Android, apple, creative app")
    meta(name="author", content="CodedThemes")
    // Favicon icon
    link(rel="icon", href="/img/favicon.ico", type="image/x-icon")
    // Google font
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800", rel="stylesheet")
    // Required Fremwork
    link(rel="stylesheet",  href="/stylesheet/css/bootstrap.min.css")
    // themify-icons line icon
    link(rel="stylesheet",  href="/icon/themify-icons/themify-icons.css")
    // ico font
    link(rel="stylesheet",  href="/icon/icofont/css/icofont.css")
    // Style.css
    link(rel="stylesheet",  href="/stylesheet/style.css")

  body.fix-menu
    // Pre-loader start
    //- .theme-loader
    //-   .ball-scale
    //-     .contain
    //-       each i in [1, 2, 3,]
    //-         .ring
    //-           .frame
    // Pre-loader end

    section.login.p-fixed.d-flex.text-center.bg-primary.common-img-bg
      // Container-fluid starts
      .container
        .row
          .col-sm-12
            // Authentication card start
            .login-card.card-block.auth-body.mr-auto.ml-auto
              form.md-float-material(action="login" method="post")
                //- .text-center
                //-   img(src="assets/images/auth/logo-dark.png", alt="logo.png")
                .auth-box
                  .row.m-b-20
                    .col-md-12
                      h3.text-left.txt-primary Sign In
                  hr
                  .input-group
                    input.form-control(type="text", name="regNumber", placeholder="Your Email Address" required)
                    span.md-line
                  .input-group
                    input.form-control(type="password",name="password", placeholder="Password" required)
                    span.md-line
                  .row.m-t-25.text-left
                    .col-sm-7.col-xs-12
                      .checkbox-fade.fade-in-primary
                        label
                          input(type="checkbox", value="")
                          span.cr
                            i.cr-icon.icofont.icofont-ui-check.txt-primary
                          span.text-inverse Remember me
                    .col-sm-5.col-xs-12.forgot-phone.text-right
                      a(href="auth-reset-password.html", class="text-right f-w-600 text-inverse") Forgot Your Password?
                  .row.m-t-30
                    .col-md-12
                      button.btn.btn-primary.btn-md.btn-block.waves-effect.text-center.m-b-20(type="submit") Sign in
                  hr
  script(type="text/javascript", src="assets/js/jquery/jquery.min.js")
